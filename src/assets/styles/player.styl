.player
  @apply absolute flex items-center justify-center top-0 bottom-0 left-0 right-0 w-full h-full bg-black

  .back
    @apply absolute top-0 left-0 p-10 text-3xl text-white opacity-0 cursor-pointer
    transition all .3s ease;

    span
      @apply opacity-0
      transition all .3s ease;

    &:hover
      transform scale(1.05)

      span
        @apply opacity-100

  &:hover .back
    @apply opacity-100